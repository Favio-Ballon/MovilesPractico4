<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lblLibroName"
        android:layout_width="230dp"
        android:layout_height="124dp"
        android:gravity="center_vertical"

        android:text="Libro Ejemplo"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/lblLibroAutor"
        app:layout_constraintStart_toEndOf="@+id/imagenLibro"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagenLibro"
        android:layout_width="99dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lblLibroRating"
        android:layout_width="68dp"
        android:layout_height="150dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:text="10.00"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblLibroName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLibroAutor"
        android:layout_width="229dp"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        android:text="Autor"
        app:layout_constraintEnd_toStartOf="@+id/lblLibroRating"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenLibro"
        app:layout_constraintTop_toBottomOf="@+id/lblLibroName" />


</androidx.constraintlayout.widget.ConstraintLayout>